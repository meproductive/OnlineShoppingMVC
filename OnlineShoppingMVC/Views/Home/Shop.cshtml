@using OnlineShoppingMVC.Models
@model IEnumerable<ProductViewModel>
@{
    ViewBag.Title = "Shop";
}
<div class="wrapper">
    @if (Model.Count() == 0)
    {
        <span>Ürün bulunamadı</span>
    }
    else
    {
        <span>@Model.Count() adet ürün bulundu</span>
    }
    <div class="card-outer-container">
        <div class="card-inner-container d-flex">
            @Html.Partial("_Product", Model)
        </div>
    </div>
</div>
